{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Backend: pip install",
      "type": "shell",
      "command": "python -m venv .venv && . .venv/bin/activate && pip install -r requirements.txt",
      "options": {
        "cwd": "${workspaceFolder}/backend"
      }
    },
    {
      "label": "Frontend: npm install",
      "type": "shell",
      "command": "npm install",
      "options": {
        "cwd": "${workspaceFolder}/frontend"
      }
    },
    {
      "label": "Dev: docker compose up",
      "type": "shell",
      "command": "docker compose -f docker-compose.dev.yml up --build",
      "problemMatcher": []
    },
    {
      "label": "Prod: docker compose build",
      "type": "shell",
      "command": "DB_URL=\"mysql+aiomysql://user:pass@rds-endpoint:3306/bdu_inventory\" docker compose build",
      "problemMatcher": []
    }
  ]
}